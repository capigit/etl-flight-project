# Variables d'environnement pour ETL Flight Project
# Copier ce fichier en .env et remplir les valeurs

# ========== API ==========
# URL de l'API OpenSky Network
OPENSKY_API_URL=https://opensky-network.org/api/states/all

# ========== DATABASE ==========
# Chemin vers la base de données SQLite
DATABASE_PATH=./data/flights.db

# Mode de chargement: 'append' (ajoute), 'replace' (remplace), 'fail' (erreur si existe)
DB_IF_EXISTS=append

# ========== GOOGLE SHEETS (OPTIONNEL) ==========
# Activer l'export vers Google Sheets
ENABLE_GOOGLE_SHEETS_EXPORT=false

# ID de la Google Sheet (obtenir depuis l'URL)
# https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEET_ID=

# Chemin vers le fichier credentials.json obtenu depuis Google Cloud Console
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Nom de la feuille de calcul
GOOGLE_WORKSHEET_NAME=flights

# ========== PIPELINE ==========
# Intervalle de la boucle en secondes (3600 = 1 heure)
CYCLE_INTERVAL_SECONDS=3600

# Nombre de tentatives en cas d'erreur
MAX_RETRIES=3

# Timeout des requêtes HTTP en secondes
TIMEOUT_SECONDS=10

# ========== LOGGING ==========
# Niveau de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========== FEATURES ==========
# Activer les vérifications de santé du système
ENABLE_HEALTH_CHECK=true

# Activer la validation des données avant chargement
ENABLE_VALIDATION=true
